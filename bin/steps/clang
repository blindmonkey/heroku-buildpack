if [[ ! -d "$CACHE_DIR/clang-$CLANG_VERSION-$DISTRIB_RELEASE" ]]; then
  puts-step "Installing clang-$CLANG_VERSION"
  mkdir -p "$CACHE_DIR/clang-$CLANG_VERSION-$DISTRIB_RELEASE"
  curl http://releases.llvm.org/$CLANG_VERSION/clang+llvm-$CLANG_VERSION-linux-x86_64-ubuntu$DISTRIB_RELEASE.tar.xz -s -L | xz -d -c | tar x -C $CACHE_DIR/clang-$CLANG_VERSION-$DISTRIB_RELEASE --strip 1 &> /dev/null
else
  puts-step "Using cached clang-$CLANG_VERSION"
fi

export PATH="$CACHE_DIR/clang-$CLANG_VERSION-$DISTRIB_RELEASE/bin:$PATH"
