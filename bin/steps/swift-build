cd $BUILD_DIR
puts-step "Building Package"
#swift build $SWIFT_BUILD_FLAGS --configuration "$SWIFT_BUILD_CONFIGURATION" --build-path "$SWIFT_BUILD_PATH"

puts-step "Installing toolbox"

echo "Downloading...";
git clone https://github.com/vapor/toolbox vapor-toolbox > /dev/null 2>&1;
cd vapor-toolbox;

TOOLBOXTAG=$(git describe --tags);
git checkout $TOOLBOXTAG > /dev/null 2>&1;

echo "Compiling...";
swift build -Xswiftc -DNO_ANIMATION > /dev/null;

echo "Installing...";
mv .build/debug/Executable ../vapor;
cd ..;
rm -rf vapor-toolbox;

puts-step "Building Package ... this will take ~5-10 minutes"
./vapor build --release
